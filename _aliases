clear_menus(){(
  set -e
  cd ~/.local/share
  mkdir -p applications.bak
  mv -v applications/wine-*.desktop applications.bak
  cd ~/.config
  mkdir -p menus.bak
  mv -v menus/* menus.bak
)}

