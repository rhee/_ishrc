docker_tf(){(
    LD_PRELOAD="/usr/lib/libtcmalloc_minimal.so.4" 
    export LD_PRELOAD

    IMAGE=tensorflow

    nvidia-docker run -ti --rm --pid=host \
	-v /data:/data \
	-v /etc/localtime:/etc/localtime:ro \
	-w "$(pwd)" \
	"$IMAGE" \
	"$@"
)}

