flac2mp3(){(
  if [ -z "$2" ]
  then
    echo "Usage: flac2mp3 input.flac output.mp3" 1>&2
    return -1
  fi
  input="$1"
  output="$2"
  ffmpeg -i "$input" -ab 320k -map_metadata 0 -id3v2_version 3 "$output"
)}

