_mac_quit_app(){(
  app="$1"
  osascript -e 'quit app "$app"'
)}

alias mac-wifi-password=_mac_wifi_password
_mac_wifi_password(){(
  your_router="$1"
  security find-generic-password -ga "$your_router"
)}

